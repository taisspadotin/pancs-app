            android:layout_height="30dp"
            android:text="C"
            android:id="@+id/botaoC"
            android:background="@drawable/bola"/>
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="D"
            android:id="@+id/botaoD"
            android:background="@drawable/bola"/>
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="E"
            android:id="@+id/botaoE"
            android:background="@drawable/bola"/>
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="F"
            android:textColor="#696969"
            android:background="@drawable/bola"/>
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="G"
            android:textColor="#696969"
            android:background="@drawable/bola"/>
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="H"
            android:textColor="#696969"
            android:background="@drawable/bola"/>
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="I"
            android:textColor="#696969"
            android:background="@drawable/bola"/>
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="J"
            android:textColor="#696969"
            android:background="@drawable/bola"/>
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="K"
            android:textColor="#696969"
            android:background="@drawable/bola"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_marginStart="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="L"
            android:textColor="#696969"
            android:background="@drawable/bola"/>
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="M"
            android:id="@+id/botaoM"
            android:background="@drawable/bola"/>
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="N"
            android:textColor="#696969"
            android:background="@drawable/bola"/>
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="O"
            android:textColor="#696969"
            android:background="@drawable/bola"/>
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="P"
            android:id="@+id/botaoP"
            android:background="@drawable/bola"/>
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="Q"
            android:textColor="#696969"
            android:background="@drawable/bola"/>
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="R"
            android:textColor="#696969"
            android:background="@drawable/bola"/>
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="S"
            android:id="@+id/botaoS"
