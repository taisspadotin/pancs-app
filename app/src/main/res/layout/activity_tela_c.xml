                android:layout_marginBottom="10dp"/>
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/home"
                android:textSize="20dp"
                android:id="@+id/cm"
                android:layout_marginBottom="10dp"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_marginStart="20dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="A"
                android:id="@+id/botaocA"
                android:textColor="#696969"
                android:background="@drawable/bola"/>
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="B"
                android:id="@+id/botaocB"
                android:textColor="#698b69"
                android:background="@drawable/bola"/>
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="C"
                android:id="@+id/botaocC"
                android:background="@drawable/bola"/>
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="D"
                android:id="@+id/botaocD"
                android:background="@drawable/bola"/>
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="E"
                android:id="@+id/botaocE"
                android:background="@drawable/bola"/>
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="F"
                android:id="@+id/botaocF"
                android:background="@drawable/bola"/>
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="G"
                android:id="@+id/botaocG"
                android:background="@drawable/bola"/>
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="H"
                android:id="@+id/botaocH"
                android:background="@drawable/bola"/>
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="I"
                android:id="@+id/botaocI"
                android:background="@drawable/bola"/>
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="J"
                android:id="@+id/botaocJ"
                android:background="@drawable/bola"/>
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="K"
                android:id="@+id/botaocK"
                android:background="@drawable/bola"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_marginStart="10dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="L"
                android:id="@+id/botaocL"
                android:background="@drawable/bola"/>
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="M"
                android:id="@+id/botaocM"
                android:background="@drawable/bola"/>
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="N"
                android:id="@+id/botaocN"
                android:background="@drawable/bola"/>
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="O"
                android:id="@+id/botaocO"
                android:background="@drawable/bola"/>
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="P"
                android:id="@+id/botaocP"
                android:background="@drawable/bola"/>
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="Q"
                android:id="@+id/botaocQ"
                android:textColor="#696969"
                android:background="@drawable/bola"/>
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="R"
                android:id="@+id/botaocR"
                android:background="@drawable/bola"/>
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="S"
                android:id="@+id/botaocS"
                android:background="@drawable/bola"/>
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="T"
                android:id="@+id/botaocT"
                android:background="@drawable/bola"/>
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="U"
                android:id="@+id/botaocU"
                android:background="@drawable/bola"/>
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="V"
                android:id="@+id/botaocV"
                android:textColor="#696969"
                android:background="@drawable/bola"/>
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="Z"
                android:textColor="#696969"
                android:id="@+id/botaocZ"
                android:background="@drawable/bola"/>


        </LinearLayout>





        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#33fffacd"
            >
            <com.github.chrisbanes.photoview.PhotoView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/caruru2"
                android:layout_marginStart="10dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_marginStart="5dp"
                    android:text="Caruru"
                    android:fontFamily="cursive"
                    android:textSize="25dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amaranthus flavus"
                    android:textColor="#696969"
                    android:layout_marginStart="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="LER MAIS"
                    android:id="@+id/lmc1"
                    android:fontFamily="serif"

                    android:layout_marginStart="160dp"
                    android:layout_marginTop="0dp"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:textColor="#000000"
                    android:text="Outros Nomes: Caruru-de-Cuia, Caruru-Rôxo, Caruru-de-Mancha, Caruru-de-Porco, Caruru-de-Espinho, Bredo-de-Chifre, Bredo-de-Espinho, Bredo-vermelho, Bredo.
\nPlanta daninha, seu consumo já é feito em parte da Bahia, ele possui diversas variedades de usos.
\nPartes comestiveis: Todas.
\nEfeitos medicinais: Ajudar a combater infecções no organismo e auxiliar no tratamento de problemas hepáticos.
\nAjuda também a combater a osteoporose e a fortalecer os ossos e dentes porque é muito rica em cálcio.
\nVitaminas: vitaminas A, B1, B2, C, ferro, cálcio e potássio.
\nEpoca: Inverno.  "
                    android:id="@+id/tvc1"
                    android:layout_marginStart="5dp"
                    />

            </LinearLayout>
        </LinearLayout>




        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#33fffacd"
            >
            <com.github.chrisbanes.photoview.PhotoView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/cosmos2"
                android:layout_marginStart="10dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_marginStart="5dp"
                    android:text="Cosmos"
                    android:fontFamily="cursive"
                    android:textSize="25dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cosmos sulphureus"
                    android:textColor="#696969"
                    android:layout_marginStart="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="LER MAIS"
                    android:fontFamily="serif"
                    android:id="@+id/lmc2"
                    android:layout_marginStart="160dp"
                    android:layout_marginTop="0dp"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:textColor="#000000"
                    android:text="Flor que nasce de forma espontanêa em jardins e terrenos baldios, tem coloração laranja ou amarelada, pode ser usada na decoração de pratos, ou de forma alimenticia.
                    \nLocalização: É natural do centro-sul e sul mexicano.
                    \nPartes comestiveis: flor.
                    \nEpoca: Primavera. "
                    android:id="@+id/tvc2"
                    android:layout_marginStart="5dp"
                    />

            </LinearLayout>
        </LinearLayout>


        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#33fffacd"
            >
            <com.github.chrisbanes.photoview.PhotoView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/crepisjaponica2"
                android:layout_marginStart="10dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_marginStart="5dp"
                    android:text="Crepis Japonica"
                    android:fontFamily="cursive"
                    android:textSize="25dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Crepis Japonica"
                    android:textColor="#696969"
                    android:layout_marginStart="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="LER MAIS"
                    android:id="@+id/lmc3"
                    android:fontFamily="serif"

                    android:layout_marginStart="160dp"
                    android:layout_marginTop="0dp"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:textColor="#000000"
                    android:text="Outros Nomes: Barba de falcão ou crepe do Japão.\nErva daninha, com flores amarelo ouro, prefere a sombra, também é facil encontra-la em calçadas e muros.\nLocalização: Nativa da Ásia, mas hoje está presente em todo Brasil.\nPartes comestiveis: Todas.\nEfeitos medicinais: antibactericida, antiviral, combate alergias, purifica o sangue, combate diarreia, gazes, é diurético, combate afecções dos rins e fígado, vitilico, diabetes, hipertensão, combate acidose,  é antioxidante, combatendo radicais livres, o envelhecimento precoce, o câncer e doenças crônicas.\nVitaminas: A, C, E, potássio, ferro, carotenóides, fibras e antioxidantes.\nEpoca: Inverno. "
                    android:layout_marginStart="5dp"
                    android:id="@+id/tvc3"
                    />

            </LinearLayout>
        </LinearLayout>



