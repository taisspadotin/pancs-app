        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#33fffacd"
            >
            <com.github.chrisbanes.photoview.PhotoView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/denteleao2"
                android:layout_marginStart="10dp"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_marginStart="5dp"
                    android:text="Dente de Leão"
                    android:fontFamily="cursive"
                    android:textSize="25dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Taraxacum officinale"
                    android:textColor="#696969"
                    android:layout_marginStart="5dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="LER MAIS"
                    android:fontFamily="serif"
                    android:id="@+id/lmd1"
                    android:layout_marginStart="160dp"
                    android:layout_marginTop="0dp"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:textColor="#000000"
                    android:text="Planta espontanêa, nasce no final do inverno e começo da primavera, foi reconhecida como PANC e hoje em dia vem sendo utilizada no consumo de diversos pratos, mas é principalmente conhecida como bolinha de soprar, graças a forma como suas sementes se propagam.
                    \nLocalização: É de origem europeia.
                    \nPartes comestiveis: Toda a planta.
                    \nEfeitos medicinais: As folhas protegem o fígado contra danos causados pelo álcool, e tambem possui efeito antioxidante e antitumoral.
                    \nEpoca: Primavera."

                    android:id="@+id/tvd1"
                    android:layout_marginStart="5dp"
                    />

