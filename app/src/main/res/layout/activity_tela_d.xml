                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="U"
                android:textColor="#696969"
                android:background="@drawable/bola"/>
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="V"
                android:textColor="#696969"
                android:background="@drawable/bola"/>
