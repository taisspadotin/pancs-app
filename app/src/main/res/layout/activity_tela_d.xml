                android:text="H"
                android:textColor="#696969"
                android:background="@drawable/bola"/>
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="I"
                android:textColor="#696969"
                android:background="@drawable/bola"/>
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="J"
                android:textColor="#696969"
                android:background="@drawable/bola"/>
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="K"
                android:textColor="#696969"
                android:background="@drawable/bola"/>



