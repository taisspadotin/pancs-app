                android:background="@drawable/bola"/>
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="D"
                android:id="@+id/botaodD"
                android:background="@drawable/bola"/>
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="E"
                android:id="@+id/botaodE"
                android:background="@drawable/bola"/>
